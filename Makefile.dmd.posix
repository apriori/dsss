PREFIX=/usr

all: dsss

dsss: dsss_build/dsss_build
	./dsss_build/dsss_build -od. -Idsss_build sss/main.d -Tdsss
	`pwd`/dsss build

dsss_build/dsss_build:
	cd dsss_build && \
	$(MAKE) -f Makefile.unix

install: dsss
	`pwd`/dsss install --prefix=$(PREFIX)

clean:
	rm -f *.o
	rm -f dsss
	cd dsss_build && \
	$(MAKE) -f Makefile.unix clean
