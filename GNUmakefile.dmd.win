PREFIX=C:\\dsss
MAKE=make

all: dsss.exe

dsss.exe: dsss_build\\dsss_build.exe
	copy dsss_build\\defaults\\dmd-win dsss_build\\rebuild.conf\\default
	dsss_build\\dsss_build.exe -od. -Idsss_build sss\\main.d -ofdsss_int
	dsss_int.exe build

dsss_build\\dsss_build.exe:
	cd dsss_build && $(MAKE) && cd ..

install: dsss.exe
	dsss.exe install --prefix=$(PREFIX)

clean:
	-dsss.exe distclean
	del *.obj
	del dsss.exe
	del dsss_int.exe
