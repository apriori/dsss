PREFIX=/usr

all: dsss

dsss: dsss_build/dsss_build
	./dsss_build/dsss_build -exec getmango.d
	./dsss_build/dsss_build -Idsss_build sss/main.d -Tdsss
	`pwd`/dsss build

dsss_build/dsss_build:
	cd dsss_build && \
	$(MAKE) -f Makefile.gdc

install: dsss
	`pwd`/dsss install --prefix=$(PREFIX)

clean:
	-`pwd`/dsss distclean
	rm -f *.o
	rm -f dsss
	cd dsss_build && \
	$(MAKE) -f Makefile.gdc clean
