PREFIX=/usr

all: dsss

dsss: dsss_build/dsss_build
	cp -f dsss_build/defaults/gdc-posix dsss_build/rebuild.conf/default
	./dsss_build/dsss_build -Idsss_build sss/main.d -ofdsss
	`pwd`/dsss build

dsss_build/dsss_build:
	cd dsss_build && \
	$(MAKE)

install: dsss
	`pwd`/dsss install --prefix=$(PREFIX)

clean:
	-`pwd`/dsss distclean
	rm -f *.o
	rm -f dsss
	cd dsss_build && \
	$(MAKE) clean
