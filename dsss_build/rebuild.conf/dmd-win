profile=phobos

exeext=.exe
objext=obj

compiler=dmd

compile=dmd -c $i -of$o
incflag=-I$i
compile_libflag=-L-L$i
compile_flag=$i
optimizeflag=-O
versionflag=-version=$i

link=dmd $i -of$o
link_libflag=-L-L$i
link_lib=-L-l$i
link_flag=-L$i

liblink=lib -c $o $i
liblink_libdir=
liblink_lib=
liblink_flag=

postliblink=echo $i

shlibs=no
