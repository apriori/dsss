profile=phobos

compiler=dmd

exeext=.exe
objext=obj


[compile]
cmd=dmd -c $i -of$o

flag=$i
incdir=-I$i
libdir=-L-L$i
optimize=-O
version=-version=$i


[link]
cmd=dmd $i -of$o

libdir=-L$i
lib=-L$i.lib
flag=-L$i


[liblink]
cmd=lib -c $o $i

libdir=
lib=
flag=


[postliblink]
cmd=ranlib $i


[shliblink]
shlibs=no
