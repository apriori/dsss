PREFIX=C:\\dsss
MAKE=make

all: dsss.exe

dsss.exe: dsss_build\\dsss_build.exe
	dsss_build\\dsss_build.exe -od. -Idsss_build sss\\main.d -Tdsss_int
	dsss_int.exe build

dsss_build\\dsss_build.exe:
	cd dsss_build
	$(MAKE) -fMakefile.dos
	cd ..

install: dsss.exe
	dsss.exe install --prefix=$(PREFIX)

clean:
	-dsss.exe distclean
	del *.obj
	del dsss.exe
	del dsss_int.exe
	cd dsss_build
	$(MAKE) -f Makefile.dos clean
	cd ..
