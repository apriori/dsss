PREFIX=C:\\dsss
MAKE=make

all: dsss.exe

dsss.exe: rebuild\\rebuild.exe
	copy rebuild\\defaults\\dmd-win rebuild\\rebuild.conf\\default
	rebuild\\rebuild.exe -od. -Irebuild sss\\main.d -ofdsss_int
	dsss_int.exe build

rebuild\\rebuild.exe:
	cd rebuild
	$(MAKE) EXEEXT=.exe
	cd ..

install: dsss.exe
	dsss.exe install --prefix=$(PREFIX)

clean:
	-dsss.exe distclean
	del *.obj
	del dsss.exe
	del dsss_int.exe
