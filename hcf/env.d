module hcf.env;

import std.string;
import std.process;


version (Windows) {
    import bcd.windows.windows;
}

/** Get an environment variable D-ly */
string getEnvVar(string var)
{
    return getenv(var);
}

/** Set an environment variable D-ly */
void setEnvVar(string var, string val)
{
    setenv(var, val, true);
}
