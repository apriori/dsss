profile=phobos

compiler=gdc

exeext=.exe
objext=o


version=DigitalMars
noversion=GNU
noversion=linux
noversion=Unix
noversion=Posix
version=Windows
version=X86
noversion=PPC
noversion=X86_64
version=LittleEndian
noversion=BigEndian


[compile]
cmd=gdmd -c $i

flag=$i
incdir=-I$i
libdir=-L-L$i
optimize=-O
version=-version=$i


[link]
cmd=gdmd $i -of$o

libdir=-L-L$i
lib=-L-l$i
flag=-L$i


[liblink]
cmd=ar rc $o $i

libdir=
lib=
flag=


[postliblink]
cmd=ranlib $i


[shliblink]
shlibs=yes
cmd=gdmd -q,-shared $i -of$o

libdir=-L-L$i
lib=-L-l$i
flag=-L$i
