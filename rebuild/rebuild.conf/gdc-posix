profile=phobos

compiler=gdc

exeext=
objext=o


noversion=DigitalMars
version=GNU
testversion=linux
version=Unix
version=Posix
noversion=Windows
testversion=X86
testversion=PPC
testversion=X86_64
testversion=LittleEndian
testversion=BigEndian


[compile]
cmd=gdmd -version=Posix -c $i

flag=$i
incdir=-I$i
libdir=-L-L$i
optimize=-O
version=-version=$i


[link]
cmd=gdmd -q,-rdynamic $i -of$o

libdir=-L-L$i
lib=-L-l$i
flag=-L$i


[liblink]
cmd=ar rc $o $i

libdir=
lib=
flag=


[postliblink]
cmd=ranlib $i


[shliblink]
shlibs=yes
cmd=gdmd -q,-shared $i -of$o

libdir=-L-L$i
lib=-L-l$i
flag=-L$i
